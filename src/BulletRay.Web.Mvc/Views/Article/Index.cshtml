@using BulletRay.Web.Models.Common.Modals
@{
    ViewData["Title"] = L("ArticleListManage");
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
    {
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/jquery-datatable/dataTables.bootstrap.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/bootstrap-select/dist/css/bootstrap-select.css" asp-append-version="true" />
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/jquery-datatable/dataTables.bootstrap.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/bootstrap-select/dist/css/bootstrap-select.min.css" asp-append-version="true" />
    </environment>
}
@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Article/Index.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-datatable/jquery.dataTables.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-datatable/dataTables.bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap-select/dist/js/bootstrap-select.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap-select/dist/js/i18n/defaults-zh_CN.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Article/Index.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-datatable/jquery.dataTables.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-datatable/dataTables.bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap-select/dist/js/bootstrap-select.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap-select/dist/js/i18n/defaults-zh_CN.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>@L("ArticleList")</h2>
            </div>
            <div class="body">
                <form id="articleForm" action="@Url.Action("GetDatas","Article")">
                    <div class="row clearfix">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <div class="form-group form-float">
                                <select class="form-control selectpicker" name="CategoryId" data-live-search="true" data-show-subtext="true"></select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="form-control" id="articleCategoryName" name="UserName" type="text" />
                                    <label for="articleCategoryName" class="form-label">@L("SearchArticleUserName")</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="form-control" id="articleCategoryDesc" name="Title" type="text" />
                                    <label for="articleCategoryDesc" class="form-label">@L("SearchArticleTitle")</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row clearfix">
                    <div class="col-sm-offset-10">
                        <a class="btn btn-sm btn-primary" id="btnSearch" data-loading-text="查询中……">查询</a>&nbsp;&nbsp;
                        <a class="btn btn-sm btn-primary" id="btnExport" data-loading-text="操作中……" data-url="@Url.Action("Export","ArticleCategory")">导出</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="header">
                <h2>查询结果</h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-hover" id="resultTable">
                        <thead>
                            <tr>
                                <th class="align-center">编号</th>
                                <th class="align-center">分类名字</th>
                                <th class="align-center">文章名字</th>
                                <th class="align-center">文章短介绍</th>
                                <th class="align-center">创建时间</th>
                                <th class="align-center">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="row">
                    <a class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right m-r-15" id="btnCreate" data-toggle="modal" data-target="#CreateArticleModal">
                        <i class="material-icons">add</i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="CreateArticleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateArticle")))
            <div class="modal-body">
                <form name="CreateArticleForm" role="form" novalidate class="form-validation">
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group form-float">
                                <select class="form-control selectpicker" name="CategoryId" data-live-search="true" data-show-subtext="true"></select>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="validate form-control" id="articleTitle" type="text" name="Title" required maxlength="32" minlength="2" />
                                    <label class="form-label" for="articleTitle">@L("ArticleTitle")</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="validate form-control" id="articleShortDesc" type="text" name="ShortDesc" maxlength="60" />
                                    <label class="form-label" for="articleShortDesc">@L("ArticleShortDesc")</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group form-float">
                                <div class="">
                                    <input class="filled-in" id="isTop" type="checkbox" name="IsTop" value="true" />
                                    <label class="form-label" for="isTop">@L("IsTop")</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group form-float">
                                <div class="">
                                    <label class="col-lg-3 col-md-3 col-sm-3 col-xs-3 control-label"><a class="remove-text-decoration" data-toggle="collapse" href="#uploadFileDiv">添加文章封面图片：</a></label>
                                    <div class="col-lg-9 col-md-9 col-sx-9 col-xs-9 collapse" id="uploadFileDiv">
                                        <input class="file-loading ignore" id="inputAttachment" name="inputAttachment[]" type="file" multiple>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group form-float">
                                <div class="">
                                    <div id="articleRichEditor"></div>
                                    <input id="articleContent" name="Content" type="hidden" value="" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            @Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
        </div>
    </div>
</div>
