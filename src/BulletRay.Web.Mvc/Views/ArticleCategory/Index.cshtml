@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
    {
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/jquery-datatable/dataTables.bootstrap.min.css" asp-append-version="true" />
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/jquery-datatable/dataTables.bootstrap.min.css" asp-append-version="true" />
    </environment>
}
@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/ArticleCategory/Index.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-datatable/jquery.dataTables.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-datatable/dataTables.bootstrap.min.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/ArticleCategory/Index.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-datatable/jquery.dataTables.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-datatable/dataTables.bootstrap.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>@L("ArticleCategory")</h2>
            </div>
            <div class="body">
                <form id="articleCategoryForm" action="@Url.Action("GetDatas","ArticleCategory")">
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="form-control" id="articleCategoryName" name="Name" type="text" />
                                    <label for="articleCategoryName" class="form-label">@L("SearchArticleCategoryName")</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="form-control" id="articleCategoryDesc" name="Desc" type="text" />
                                    <label for="articleCategoryDesc" class="form-label">@L("SearchArticleCategoryDesc")</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-offset-9">
                            <a class="btn btn-sm btn-primary" id="btnSearch" data-loading-text="查询中……">查询</a>&nbsp;&nbsp;
                            <a class="btn btn-sm btn-primary" id="btnCreate" data-toggle="modal" data-target="#CreateArticleCategoryModal">新增</a>&nbsp;&nbsp;
                            <a class="btn btn-sm btn-primary" id="btnExport" data-loading-text="操作中……" data-url="@Url.Action("Export","ArticleCategory")">导出</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card">
            <div class="header">
                <h2>查询结果</h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-hover" id="resultTable">
                        <thead>
                            <tr>
                                <th>编号</th>
                                <th>分类名字</th>
                                <th>分类简介</th>
                                <th>创建时间</th>
                                <th>修改时间</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="CreateArticleCategoryModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>
